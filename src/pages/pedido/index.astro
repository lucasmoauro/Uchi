---
import BackButton from "@components/BackButton.astro";
import CakeFilter from "@components/CakeFilter.astro";
import CakeOrderCard from "@components/CakeOrderCard.astro";
import Layout from "@layouts/Layout.astro";

const listItems = [
	{
		title: "Chocolate",
	},
	{
		title: "Crema",
	},
	{
		title: "Dulce de Leche",
	},
];
---

<Layout title="Uchi | Realiza tu pedido">
	<main class="m-4 pb-10">
		<div class="h-[10%] flex items-center">
			<BackButton href="/" />
		</div>
		<section class="flex flex-col justify-center items-center w-full mt-4">
			<section class="flex flex-grow w-6/12 mb-2">
				<div
					class="bg-primary w-full p-4 rounded-full shadow-3xl flex justify-center"
				>
					<div class="bg-secondary w-full h-10 rounded-full flex items-center">
						<div class="bg-primary rounded-full w-full">x</div>
					</div>
					<!-- <div class="rounded-full bg-accent w-8"></div>
					<div class="rounded-full bg-accent w-8"></div>
					<div class="rounded-full bg-accent w-8"></div> -->
				</div>
			</section>
			<section class="flex w-full mt-4 relative">
				<!-- FILTRO -->
				<div class="w-2/12 ml-10">
					<CakeFilter listItems={listItems} />
				</div>
				<!-- CARDS -->
				<section class="grid grid-cols-3 place-items-center gap-10 flex-1 ml-8">
					<!-- Card -->
					<CakeOrderCard />
				</section>
			</section>
		</section>
	</main>
</Layout>
