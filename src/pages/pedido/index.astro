---
import BackButton from "@components/BackButton.astro";
import CakeFilter from "@components/CakeFilter.astro";
import CakeOrderCard from "@components/CakeOrderCard.astro";
import { ShoppingCart } from "@components/react/ShoppingCart";
import { StepperOrder } from "@components/react/StepperOrder";
import Layout from "@layouts/Layout.astro";

const listItems = [
	{
		title: "Chocolate",
	},
	{
		title: "Crema",
	},
	{
		title: "Dulce de Leche",
	},
];
---

<Layout title="Uchi | Realiza tu pedido">
	<main class="m-4 pb-20">
		<div class="h-[10%] flex items-center">
			<BackButton href="/" />
		</div>
		<section class="flex flex-col justify-center items-center w-full mt-4">
			<section class="flex flex-grow w-6/12 mb-2">
				<div
					class="bg-secondary-accent/5 w-full rounded-full shadow-3xl flex items-center justify-center"
				>
					<StepperOrder client:load />
				</div>
			</section>
			<section class="flex w-full mt-4 relative">
				<!-- FILTRO -->
				<div class="w-2/12 ml-10">
					<CakeFilter listItems={listItems} />
				</div>
				<!-- CARDS -->
				<section class="grid grid-cols-3 place-items-center gap-10 flex-1 ml-8">
					<!-- Card -->
					<CakeOrderCard title="Gateau Orange Earl Grey" />
					<CakeOrderCard title="Chipa"/>
					<CakeOrderCard title="Chocolate blanco"/>
					<CakeOrderCard title="Chocolate"/>
					<CakeOrderCard title="Lorem ipsum dolor"/>
				</section>
			</section>
			<ShoppingCart client:load />
		</section>
	</main>
</Layout>
