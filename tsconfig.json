{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "src",
    "paths": {
      "@mocks/*": ["mocks/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@layouts/*": ["layouts/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
  "exclude": ["dist", "node_modules"]
}
